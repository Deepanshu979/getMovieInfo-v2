<div class="container">
  <div class="details">
    <h1 class="display-1"><%= show.Title %></h1>
    <div class="div">
      <img src="<%= show.Poster %> " alt="" />

      <div class="detailsP">
        <%- show.Plot %>
        <div style="color: #cb6ced">
          Cast: <span style="color: rgb(107, 98, 98)"><%= show.Actors %></span
          ><br />
          Writer: <span style="color: rgb(107, 98, 98)"><%= show.Writer %></span
          ><br />
          Release Date:
          <span style="color: rgb(107, 98, 98)"><%= show.Released %></span>
          <br />
          Genres:
          <span style="color: rgb(107, 98, 98)"><%= show.Genre %></span> <br />
          Language:
          <span style="color: rgb(107, 98, 98)"><%= show.Language %></span>
          <br />
          Ratings:
          <span style="color: rgb(107, 98, 98)"><%= show.imdbRating %></span>
          <br />
          Type: <span style="color: rgb(107, 98, 98)"><%= show.Type %></span>
          <br />
        </div>
        <% if(currentUser && notInWatchList){ %>
        <form action="/<%= currentUser._id %>/watchlist" method="POST">
          <input
            type="text"
            value="<%=show.imdbID%>"
            style="display: none"
            name="movieId"
          />
          <button class="btn btn-primary" href="" style="width: 10em">
            Add to watchlist
          </button>
        </form>
        <% } else if(currentUser && !notInWatchList){ %>
        <form
          action="/<%= currentUser._id %>/watchlist?_method=DELETE"
          method="POST"
        >
          <input
            type="text"
            value="<%=show.imdbID%>"
            style="display: none"
            name="movieId"
          />
          <button class="btn btn-primary" href="" style="width: 13em">
            Remove from watchlist
          </button>
        </form>
        <% } %>
      </div>
    </div>
  </div>

  <div class="be-comment-block">
    <h1 class="comments-title">Comments (<%= reviews.length %>)</h1>
    <% for(var review of reviews){ %>
    <div class="be-comment">
      <div class="be-img-comment">
        <a href="blog-detail-2.html">
          <ion-icon name="person-circle-outline"></ion-icon>
        </a>
      </div>
      <div class="be-comment-content">
        <span class="be-comment-name">
          <a style="font-size: 2em; color: white"
            ><%= review.user.username %>
          </a>
        </span>
        <% if(currentUser && review.user._id.equals(currentUser._id)){ %>

        <span class="be-comment-time">
          <a
            href="<%= show.imdbID %>/review/<%= review._id %>/delete"
            class="btn btn-sm btn-danger"
            style="color: rgb(175, 174, 174)"
            >Delete</a
          >
        </span>
        <% } %>
        <p class="be-comment-text"><%= review.body %></p>
      </div>
    </div>
    <% } %>

    <hr style="height: 3px; background-color: white" />
    <form class="form-block" method="post" action="/<%= show.imdbID %>/review">
      <div class="row">
        <div class="col-xs-12">
          <div class="form-group">
            <textarea
              name="body"
              class="form-input"
              required=""
              placeholder="Add a review"
            ></textarea>
          </div>
        </div>
        <button class="btn btn-primary">Submit</button>
      </div>
    </form>
  </div>
</div>

